<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/title_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_txtview"
            android:text="Descricao :"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/promotion_imagview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/description_textview"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promotion_imagview"
            android:text="Horario :"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/time_textview"
            android:layout_toRightOf="@+id/time_textview"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/valid_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_textview"
            android:text="Valido para :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_dividerline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/valid_txtview"
            android:layout_below="@+id/valid_txtview"
            android:layout_marginTop="15dp"
            android:background="#000000" />
    </RelativeLayout>

</RelativeLayout>